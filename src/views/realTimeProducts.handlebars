<h1>
    REAL TIME PRODUCTOS
</h1>
<div class="alertas">

<div id="alert-pop" class="alert-pop alert alert-success slide-up-down">
    <div id="alert-pop--content" class="alert-pop--content ">
            <i class="fa-sharp fa-solid fa-check"></i>
            Producto Agregado
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col col-lg-9">
            <h2>PRODUCTOS</h2>
            <div id="div-productos">
                {{#if products}}
                    <table class="table table-striped table-responsive-lg">
                        <thead>
                            <tr>
                                <th scope="col">Id               </th>
                                <th scope="col">Title            </th>
                                <th scope="col">Description      </th>
                                <th scope="col">Price            </th>
                                <th scope="col">Thumbnail        </th>
                                <th scope="col">Code             </th>
                                <th scope="col">Stock            </th>
                            </tr>
                        </thead>
                        <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{id}}          </td>
                            <td>{{title}}       </td>
                            <td>{{description}} </td>
                            <td>{{price}}       </td>
                            <td>{{thumbnail}}   </td>
                            <td>{{code}}        </td>
                            <td>{{stock}}       </td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </tr>
                    </table>
                {{else}}
                <p>No hay productos</p>
                {{/if}}
            </div>

        </div>
        <div class="col col-lg-3">
            <h2>Agregar Nuevo</h2>
        </div>
    </div>
</div>